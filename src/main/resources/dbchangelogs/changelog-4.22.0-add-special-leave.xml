<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

  <changeSet author="schneider" id="add-special-leave">

    <preConditions>
      <not>
        <tableExists tableName="special_leave_settings"/>
      </not>
    </preConditions>

    <createTable tableName="special_leave_settings">
      <column autoIncrement="true" name="id" type="bigint(20)">
        <constraints primaryKey="true"/>
      </column>
      <column name="special_leave" type="VARCHAR(255)">
        <constraints nullable="false" unique="true"/>
      </column>
      <column name="days" type="INT(3)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <insert tableName="special_leave_settings">
      <column name="special_leave" value="OWN_WEDDING"/>
      <column name="days" valueNumeric="1"/>
    </insert>
    <insert tableName="special_leave_settings">
      <column name="special_leave" value="BIRTH_OF_A_CHILD"/>
      <column name="days" valueNumeric="1"/>
    </insert>
    <insert tableName="special_leave_settings">
      <column name="special_leave" value="DEATH_OF_SPOUSE_OR_CHILD"/>
      <column name="days" valueNumeric="2"/>
    </insert>
    <insert tableName="special_leave_settings">
      <column name="special_leave" value="DEATH_OF_PARENT"/>
      <column name="days" valueNumeric="1"/>
    </insert>
    <insert tableName="special_leave_settings">
      <column name="special_leave" value="RELOCATION_FOR_OPERATIONAL_REASONS"/>
      <column name="days" valueNumeric="1"/>
    </insert>
  </changeSet>


</databaseChangeLog>
